<Window x:Class="HotelProject.UI.OrganizerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelProject.UI.OrganizerWPF"
        mc:Ignorable="d"
        Title="Login and Registration" Height="150" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="148*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Username:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="26" Width="66"/>
        <TextBox x:Name="LoginUsernameTextBox" HorizontalAlignment="Left" Margin="3,14,0,0" VerticalAlignment="Top" Width="200" Grid.Column="1" Height="18"/>

        <Label Content="Password:" HorizontalAlignment="Left" Margin="14,40,0,0" VerticalAlignment="Top" Height="26" Width="62"/>
        <PasswordBox x:Name="LoginPasswordBox" HorizontalAlignment="Left" Margin="3,44,0,0" VerticalAlignment="Top" Width="200" Grid.Column="1" Height="18"/>

        <Button Content="Login" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Width="74" Click="LoginButton_Click" Height="20"/>
            
    </Grid>
</Window>
