<Window x:Class="HotelProject.UI.RegisterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelProject.UI.RegisterWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <Label Content="Select your account" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,22,0,0" />
        <ComboBox Name="CustomerComboBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Margin="0,70,0,0" DisplayMemberPath="Name" />


        <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Width="136" Height="25" Margin="0,118,0,0" Click="LoginButton_Click" />
    </Grid>
</Window>
